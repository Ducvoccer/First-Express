<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../layouts/head %>
</head>

<body class="container">
    <header>
        <% include ../layouts/header %>
    </header>
    <div style="margin: 30px 0px">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <h1 class="text-center" style="margin: 30px 0px">List Users</h1>
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<users.length; i++) {%>
                        <tr>
                            <th scope="row">
                                <%=i+1%>
                            </th>
                            <td>
                                <%= users[i].id %>
                            </td>
                            <td>
                                <%= users[i].name %>
                            </td>
                            <td><a class="btn btn-outline-info" href="/users/<%=users[i].id%>"> View</a></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
    <footer>
        <% include ../layouts/footer %>
    </footer>

</body>

</html>