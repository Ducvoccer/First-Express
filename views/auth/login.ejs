<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../layouts/head %>
</head>

<body class="container">
    <header>
        <% include ../layouts/header %>
    </header>
    <main>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h1>Login</h1>
                <% if (locals.errors) { %>
                <div class="alert alert-danger" role="alert">
                    <%=errors %>
                </div>
                <% } %>

                <form method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter email" value="<%=locals.Value?Value.email:""%>">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" value="<%=locals.Value?Value.name:""%>">

                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </main>
    <footer>
        <% include ../layouts/footer %>
    </footer>

</body>